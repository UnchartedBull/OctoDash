{
  "name": "octodash",
  "description": "OctoDash is a simple, but beautiful dashboard for Octoprint.",
  "version": "2.7.0-rc.2",
  "license": "Apache 2.0",
  "homepage": "https://github.com/UnchartedBull/OctoDash",
  "author": {
    "name": "Timon Gaebelein",
    "email": "timon.gaebelein@icloud.com"
  },
  "main": "main.js",
  "type": "module",
  "browserslist": [
    "chrome >= 120"
  ],
  "build": {
    "appId": "octodash",
    "productName": "OctoDash",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "src/helper",
      "dist",
      "angular.json",
      "node_modules",
      "themes/**/*.css",
      "LICENSE.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "armv7l",
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "./src/assets/icon/icon.png"
    }
  },
  "scripts": {
    "prepare": "json2ts --input=src/helper/config.schema.json --output=src/model/config.model.ts",
    "postprepare": "node -e \"import('./src/helper/config.js').then(({writeDefaultConfig})=>writeDefaultConfig()).catch(err=>console.error(err))\"",
    "build": "ng build --configuration production",
    "build:pack": "npm run build && npm run electron:pack",
    "electron:dev": "APP_DEV=true electron .",
    "electron:pack": "electron-builder build -l",
    "electron:serve": "wait-on http-get://localhost:4200/ && electron .",
    "electron": "electron .",
    "test": "npm run lint",
    "lint": "npm-run-all lint:js lint:css lint:style",
    "lint:fix": "npm-run-all lint:js:fix lint:css:fix lint:style:fix",
    "lint:js": "eslint . --max-warnings=0",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint '**/*.css' '**/*.scss'",
    "lint:css:fix": "stylelint --fix '**/*.css' '**/*.scss'",
    "lint:style": "prettier --check .",
    "lint:style:fix": "prettier --write .",
    "locale:extract": "ng extract-i18n --output-path src/locale",
    "locale:update:all": "node -e \"import('./src/helper/locale.js').then(({updateLocales})=>updateLocales()).catch(err=>console.error(err))\"",
    "locale:update": "npm run locale:extract && npm run locale:update:all",
    "serve": "ng serve",
    "start": "APP_DEV=true npm-run-all -p serve electron:serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.3",
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/localize": "^21.0.3",
    "@angular/material": "^21.0.2",
    "@angular/platform-browser": "^21.0.3",
    "@angular/platform-browser-dynamic": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@fortawesome/angular-fontawesome": "^4.0.0",
    "@fortawesome/free-solid-svg-icons": "~7.1.0",
    "ajv": "~8.17.1",
    "angular-svg-round-progressbar": "^15.0.0",
    "bonjour-service": "^1.3.0",
    "compare-versions": "~6.1.1",
    "electron-store": "~10.1.0",
    "got": "^14.6.5",
    "lodash-es": "~4.17.22",
    "lottie-web": "~5.13.0",
    "mime-types": "^3.0.2",
    "ngx-lottie": "~20.0.0",
    "progress-stream": "~2.0.0",
    "rxjs": "~7.8.1",
    "tslib": "~2.8.1",
    "xliff": "~6.2.2",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@angular/language-service": "^21.0.3",
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/got": "~9.6.12",
    "@types/lodash-es": "~4.17.12",
    "@types/mime-types": "^3.0.1",
    "@types/node": "24.10.7",
    "codelyzer": "~6.0.2",
    "electron": "^39.2.7",
    "electron-builder": "~26.0.12",
    "eslint": "9.39.2",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-prettier": "~5.5.4",
    "eslint-plugin-simple-import-sort": "~12.1.1",
    "globals": "^16.5.0",
    "json-schema-to-typescript": "^15.0.4",
    "npm-run-all": "~4.1.5",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "ts-node": "~10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "wait-on": "~9.0.3"
  }
}
