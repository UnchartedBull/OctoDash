{
  "name": "octodash",
  "description": "OctoDash is a simple, but beautiful dashboard for Octoprint.",
  "version": "2.4.3",
  "license": "Apache 2.0",
  "homepage": "https://github.com/UnchartedBull/OctoDash",
  "author": {
    "name": "Timon Gaebelein",
    "email": "timon.gaebelein@icloud.com"
  },
  "main": "main.js",
  "type": "module",
  "browserslist": [
    "chrome > 87"
  ],
  "build": {
    "appId": "octodash",
    "productName": "OctoDash",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "src/helper",
      "dist",
      "angular.json",
      "node_modules",
      "themes/**/*.css",
      "LICENSE.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "armv7l",
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "./src/assets/icon/icon.png"
    }
  },
  "scripts": {
    "prepare": "json2ts ./src/helper/config.schema.json > ./src/model/config.model.ts; node -e 'const {writeDefaultConfig} = await import(`./src/helper/config.js`); writeDefaultConfig()'",
    "build": "ng build --configuration production",
    "build:pack": "npm run build && npm run electron:pack",
    "electron:dev": "APP_DEV=true electron .",
    "electron:pack": "electron-builder build -l",
    "electron:serve": "wait-on http-get://localhost:4200/ && electron .",
    "electron": "electron .",
    "test": "npm run lint",
    "lint": "npm-run-all lint:js lint:css lint:style",
    "lint:fix": "npm-run-all lint:js:fix lint:css:fix lint:style:fix",
    "lint:js": "eslint . --max-warnings=0",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint '**/*.css' '**/*.scss'",
    "lint:css:fix": "stylelint --fix '**/*.css' '**/*.scss'",
    "lint:style": "prettier --check .",
    "lint:style:fix": "prettier --write .",
    "locale:extract": "ng extract-i18n --output-path src/locale",
    "locale:update:all": "node -e 'const {updateLocales} = await import(`./src/helper/locale.js`); updateLocales()'",
    "locale:update": "npm run locale:extract && npm run locale:update:all",
    "serve": "ng serve",
    "start": "APP_DEV=true npm-run-all -p serve electron:serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.4",
    "@angular/cdk": "^19.2.7",
    "@angular/common": "^19.2.4",
    "@angular/compiler": "^19.2.4",
    "@angular/core": "^19.2.4",
    "@angular/forms": "^19.2.4",
    "@angular/localize": "^19.2.4",
    "@angular/material": "^19.2.7",
    "@angular/platform-browser": "^19.2.4",
    "@angular/platform-browser-dynamic": "^19.2.4",
    "@angular/router": "^19.2.4",
    "@fortawesome/angular-fontawesome": "~1.0.0",
    "@fortawesome/free-solid-svg-icons": "~6.7.2",
    "ajv": "~8.17.1",
    "bonjour-service": "^1.3.0",
    "compare-versions": "~6.1.1",
    "electron-store": "~10.0.1",
    "got": "^14.4.7",
    "lodash-es": "~4.17.21",
    "lottie-web": "~5.12.2",
    "mime-types": "^3.0.1",
    "ngx-lottie": "~13.0.0",
    "progress-stream": "~2.0.0",
    "rxjs": "~7.8.1",
    "tslib": "~2.8.1",
    "xliff": "~6.2.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.5",
    "@angular/compiler-cli": "^19.2.4",
    "@angular/language-service": "^19.2.4",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/got": "~9.6.12",
    "@types/lodash-es": "~4.17.12",
    "@types/mime-types": "^2.1.4",
    "@types/node": "22.13.14",
    "codelyzer": "~6.0.2",
    "electron": "~35.1.2",
    "electron-builder": "~26.0.12",
    "eslint": "9.23.0",
    "eslint-plugin-import": "~2.31.0",
    "eslint-plugin-prettier": "~5.2.5",
    "eslint-plugin-simple-import-sort": "~12.1.1",
    "globals": "^16.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "npm-run-all": "~4.1.5",
    "prettier": "~3.5.3",
    "stylelint": "^16.17.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-node": "~10.9.2",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.28.0",
    "wait-on": "~8.0.2"
  }
}
