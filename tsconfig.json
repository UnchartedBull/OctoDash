{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": []
  },
  "exclude": [
    "**/node_modules/**"
  ]
}
