{
  "definitions": {
    "customAction": {
      "type": "object",
      "required": ["icon", "command", "color", "confirm", "exit"],
      "properties": {
        "icon": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "command": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "color": {
          "type": "string",
          "pattern": "^(.*)$"
        },
        "confirm": {
          "type": "boolean"
        },
        "exit": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["octoprint", "printer", "filament", "plugins", "octodash"],
  "properties": {
    "octoprint": {
      "$id": "#/octoprint",
      "type": "object",
      "required": ["accessToken", "url"],
      "properties": {
        "accessToken": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": ""
        },
        "url": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": "http://localhost:5000/"
        }
      },
      "additionalProperties": false
    },
    "printer": {
      "$id": "#/printer",
      "type": "object",
      "required": ["name", "xySpeed", "zSpeed", "disableExtruderGCode", "zBabystepGCode", "defaultTemperatureFanSpeed"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": ""
        },
        "xySpeed": {
          "type": "integer",
          "default": 150
        },
        "zSpeed": {
          "type": "integer",
          "default": 5
        },
        "disableExtruderGCode": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": "M18 E"
        },
        "zBabystepGCode": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": "M290 Z"
        },
        "defaultTemperatureFanSpeed": {
          "$id": "#/printer/defaultTemperatureFanSpeed",
          "type": "object",
          "required": ["hotend", "heatbed", "fan"],
          "properties": {
            "hotend": {
              "type": "integer",
              "default": 200
            },
            "heatbed": {
              "type": "integer",
              "default": 60
            },
            "fan": {
              "type": "integer",
              "default": 100
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "filament": {
      "$id": "#/filament",
      "type": "object",
      "required": ["density", "thickness", "feedLength", "feedSpeed", "feedSpeedSlow", "purgeDistance", "useM600"],
      "properties": {
        "density": {
          "type": "number",
          "default": 1.25
        },
        "thickness": {
          "type": "number",
          "default": 1.75
        },
        "feedLength": {
          "type": "integer",
          "default": 0
        },
        "feedSpeed": {
          "type": "number",
          "default": 20
        },
        "feedSpeedSlow": {
          "type": "number",
          "default": 3
        },
        "purgeDistance": {
          "type": "integer",
          "default": 30
        },
        "useM600": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "$id": "#/plugins",
      "type": "object",
      "required": [
        "companion",
        "displayLayerProgress",
        "enclosure",
        "filamentManager",
        "spoolManager",
        "preheatButton",
        "printTimeGenius",
        "psuControl",
        "ophom",
        "tpLinkSmartPlug",
        "tuya",
        "tasmota",
        "tasmotaMqtt",
        "wemo"
      ],
      "properties": {
        "companion": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "displayLayerProgress": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "enclosure": {
          "type": "object",
          "required": ["enabled", "ambientSensorID", "filament1SensorID", "filament2SensorID"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "ambientSensorID": {
              "type": ["number", "null"],
              "default": null
            },
            "filament1SensorID": {
              "type": ["number", "null"],
              "default": null
            },
            "filament2SensorID": {
              "type": ["number", "null"],
              "default": null
            }
          },
          "additionalProperties": false
        },
        "filamentManager": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "spoolManager": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "preheatButton": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "printTimeGenius": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "psuControl": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "ophom": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "tpLinkSmartPlug": {
          "type": "object",
          "required": ["enabled", "smartPlugIP"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "smartPlugIP": {
              "type": "string",
              "default": "127.0.0.1"
            }
          },
          "additionalProperties": false
        },
        "tasmota": {
          "type": "object",
          "required": ["enabled", "ip", "index"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "ip": {
              "type": "string",
              "default": "127.0.0.1"
            },
            "index": {
              "type": ["number", "null"],
              "default": null
            }
          },
          "additionalProperties": false
        },
        "tasmotaMqtt": {
          "type": "object",
          "required": ["enabled", "topic", "relayNumber"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "topic": {
              "type": "string",
              "default": "topic"
            },
            "relayNumber": {
              "type": ["number", "null"],
              "default": null
            }
          },
          "additionalProperties": false
        },
        "tuya": {
          "type": "object",
          "required": ["enabled", "label"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "label": {
              "type": "string",
              "default": "label"
            }
          },
          "additionalProperties": false
        },
        "wemo": {
          "type": "object",
          "required": ["enabled", "ip"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "ip": {
              "type": "string",
              "default": "127.0.0.1"
            },
            "port": {
              "type": "number",
              "default": 49152
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "octodash": {
      "$id": "#/octodash",
      "type": "object",
      "required": [
        "customActions",
        "fileSorting",
        "invertAxisControl",
        "pollingInterval",
        "touchscreen",
        "turnScreenOffWhileSleeping",
        "turnOnPrinterWhenExitingSleep",
        "preferPreviewWhilePrinting",
        "previewProgressCircle",
        "screenSleepCommand",
        "screenWakeupCommand",
        "showExtruderControl",
        "showNotificationCenterIcon",
        "defaultDirectory"
      ],
      "properties": {
        "customActions": {
          "$id": "#/octodash/customActions",
          "type": "array",
          "default": [
            {
              "icon": "house",
              "command": "G28",
              "color": "#dcdde1",
              "confirm": false,
              "exit": true
            },
            {
              "icon": "ruler-vertical",
              "command": "G29",
              "color": "#4bae50",
              "confirm": false,
              "exit": true
            },
            {
              "icon": "fire-flame-curved",
              "command": "M140 S50; M104 S185",
              "color": "#e1b12c",
              "confirm": false,
              "exit": true
            },
            {
              "icon": "snowflake",
              "command": "M140 S0; M104 S0",
              "color": "#0097e6",
              "confirm": false,
              "exit": true
            },
            {
              "icon": "rotate-right",
              "command": "[!RELOAD]",
              "color": "#7f8fa6",
              "confirm": true,
              "exit": false
            },
            {
              "icon": "power-off",
              "command": "[!SHUTDOWN]",
              "color": "#e84118",
              "confirm": true,
              "exit": false
            }
          ],
          "items": {
            "$ref": "#/definitions/customAction"
          }
        },
        "fileSorting": {
          "$id": "#/octodash/fileSorting",
          "type": "object",
          "required": ["attribute", "order"],
          "properties": {
            "attribute": {
              "type": "string",
              "enum": ["name", "date", "size"],
              "default": "name"
            },
            "order": {
              "type": "string",
              "enum": ["asc", "dsc"],
              "default": "asc"
            }
          },
          "additionalProperties": false
        },
        "invertAxisControl": {
          "$id": "#/octodash/invertAxisControl",
          "type": "object",
          "required": ["x", "y", "z"],
          "properties": {
            "x": {
              "type": "boolean",
              "default": false
            },
            "y": {
              "type": "boolean",
              "default": false
            },
            "z": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "pollingInterval": {
          "type": "integer",
          "default": 2000
        },
        "touchscreen": {
          "type": "boolean",
          "default": true
        },
        "turnScreenOffWhileSleeping": {
          "type": "boolean",
          "default": false
        },
        "turnOnPrinterWhenExitingSleep": {
          "type": "boolean",
          "default": false
        },
        "preferPreviewWhilePrinting": {
          "type": "boolean",
          "default": false
        },
        "previewProgressCircle": {
          "type": "boolean",
          "default": false
        },
        "screenSleepCommand": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": "xset dpms force standby"
        },
        "screenWakeupCommand": {
          "type": "string",
          "pattern": "^(.*)$",
          "default": "xset s off && xset -dpms && xset s noblank"
        },
        "showExtruderControl": {
          "type": "boolean",
          "default": true
        },
        "showNotificationCenterIcon": {
          "type": "boolean",
          "default": true
        },
        "defaultDirectory": {
          "type": "string",
          "pattern": "^/(.*)$",
          "default": "/"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
